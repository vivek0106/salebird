<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="740dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="402dp"
        android:layout_height="562dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:title="Fresh Products"
            app:titleTextColor="#ffffff"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="match_parent"
            android:layout_marginTop="57dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rasna"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@mipmap/rasna" />

            <TextView
                android:layout_width="400dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:text="Rasna(Orange flavor)"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rating"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-5dp"
                android:src="@mipmap/rating" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginStart="5dp"
                android:background="#B8F87B"
                android:text="Extra ₹ 20 discount"
                android:textColor="#2A7A1E "
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="141dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="5dp"
                    android:text="₹ 180/-"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <ImageView
                    android:layout_width="346dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="-5dp"
                    android:src="@mipmap/button" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#B4B6B3 " />

            <TextView
                android:id="@+id/Available"
                android:layout_width="206dp"
                android:layout_height="31dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="Available offers"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/percent"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_label"
                android:text=" 5% unlimited CashBack on Salebird Card."
                android:textColor="#000000"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/percent1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_label"
                android:text=" Extra 10% off on DebitCard."
                android:textColor="#000000"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="86dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:background="#C3E6FA "
                    android:text="FREE Delivery by tomorrow"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#C3E6FA "
                    android:text="Fresh Product"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="#C3E6FA "
                    android:text="Product     Exchange"
                    android:textAlignment="center"
                    android:textColor="#000000" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/highlight"
        android:layout_width="412dp"
        android:layout_height="234dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">
        <TextView
            android:layout_width="96dp"
            android:layout_height="29dp"
            android:text="Highlights"
            android:layout_marginStart="5dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@mipmap/bullet"
            android:text=" Spread on Bread, Roti,Sandwiches "
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:drawableLeft="@mipmap/bullet"
            android:text="  Topping on PavBhaji, Dals, Soups"
            android:textAlignment="center"
            android:textColor="#000000" />



    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>