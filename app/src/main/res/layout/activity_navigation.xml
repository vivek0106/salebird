<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".Navigation"
    tools:openDrawer="start">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
             android:background="#9933ff"
            android:id="@+id/toolbar"
            android:logo="@mipmap/sale__bird2"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

     <!--   <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container">

            <ListView
                android:id="@+id/searchview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                />


        </FrameLayout>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:background="@mipmap/wallpaper"
            android:layout_marginBottom="-355sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="-300sp">

                <ImageButton
                    android:id="@+id/home"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundborder"
                    app:srcCompat="@mipmap/washing" />

                <ImageButton
                    android:id="@+id/fashion"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginTop="-74dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/roundborder"
                    app:srcCompat="@mipmap/fashon" />

                <ImageButton
                    android:id="@+id/fresh1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="320dp"
                    android:layout_marginTop="-76dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/roundborder"

                    app:srcCompat="@mipmap/fresh"
                    />




                <ImageButton
                    android:id="@+id/phone"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="-78dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/roundborder"
                    app:srcCompat="@mipmap/phone" />
                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:background="#000000" />

                <ImageView
                    android:id="@+id/iv_background"
                    android:layout_width="412dp"
                    android:layout_height="139dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#E3AE57"
                    android:scaleType="fitXY"
                    android:src="@drawable/anim_slideshow" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#2F3E45 " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="111dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="329dp"
                    android:text="Today's Deal"
                    android:fontFamily="@font/changa_one"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="-320dp"
                    android:layout_marginEnd="0dp"
                    android:background="#2F3E45" />

                <ImageButton
                    android:id="@+id/TodaysDeal"
                    android:layout_width="412dp"
                    android:layout_height="152dp"
                    android:scaleType="fitXY"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="179dp"
                    android:adjustViewBounds="true"
                    android:background="#E3AE57"
                    app:srcCompat="@mipmap/todaysdeal" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-170dp"
                    android:background="#2F3E45 " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="100dp"
                    android:fontFamily="@font/changa_one"
                    android:text="Mobile"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:background="#2F3E45 " />

                <ImageButton
                    android:id="@+id/mobiledeals"
                    android:layout_width="412dp"
                    android:layout_height="152dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginBottom="-51dp"
                    android:background="#E3AE57"
                    app:srcCompat="@mipmap/mobiledeals" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="60dp"
                    android:background="#2F3E45 " />

                <TextView
                    android:id="@+id/c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="100dp"
                    android:text="Fresh"
                    android:fontFamily="@font/changa_one"
                    android:textColor="#ffffff "
                    android:textSize="24sp" />
                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#2F3E45 "
                    />

                <ImageButton
                    android:id="@+id/fresh"
                    android:layout_width="412dp"
                    android:layout_height="152dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:background="#E3AE57"

                    android:scaleType="fitXY"

                    app:srcCompat="@mipmap/fresh2" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#2F3E45 "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="100dp"

                    android:text="Home Appliances"
                    android:fontFamily="@font/changa_one"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#2F3E45 "/>

                <ImageButton
                    android:id="@+id/homeappliances"
                    android:layout_width="412dp"
                    android:layout_height="152dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:background="#E3AE57"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/homeappliances" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#2F3E45 "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="100dp"
                    android:fontFamily="@font/changa_one"
                    android:text="Fashion"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#2F3E45 "/>

                <ImageButton
                    android:id="@+id/clothes"
                    android:layout_width="412dp"
                    android:layout_height="152dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:background="#E3AE57"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/clothes" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#2F3E45 "
                    />
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        android:background="#FFFFFF"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>